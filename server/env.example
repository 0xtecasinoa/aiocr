# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ocr_db
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/ocr_test_db

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50  # MB
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,tiff,bmp

# OCR Configuration
OCR_LANGUAGES=eng,jpn  # Supported languages
DEFAULT_DPI=300

# AWS S3 (Optional for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Settings
DEBUG=True
API_V1_PREFIX=/api/v1
PROJECT_NAME=Conex AI-OCR API
VERSION=1.0.0
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# OpenAI Configuration (REQUIRED for OCR)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=ocr_db
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0 